{% extends 'default.html.twig' %}

{% block main %}

<h1>{{ page.title}}</h1>

{% if page.taxonomy.category %}
<ul class="categories">
    <span>Catégories :</span>
    {% for category in page.taxonomy.category %}
    <li>
        <a href="{{ blog.url|rtrim('/') }}/category{{ config.system.param_sep }}{{ category }}">{{ category }}</a>
    </li>
    {% endfor %}
</ul>
{% endif %}
{% if page.taxonomy.tag %}
<ul class="tags">
    <span>Tags :</span>
    {% for tag in page.taxonomy.tag %}
    <li>
        <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
    </li>
    {% endfor %}
</ul>
{% endif %}

{{ page.content }}


<nav class="pagination">
    <ul>
    {% if not page.isLast %}
        <li class="prev">
            <a rel="prev" href="{{ page.prevSibling.url }}">PRÉCÈDENT</a>
        </li>
    {% endif %}

    {% if not page.isFirst %}
        <li class="next">
            <a rel="next" href="{{ page.nextSibling.url }}">SUIVANT</a>
        </li>
    {% endif %}
    </ul>
</nav>

{% endblock %}
