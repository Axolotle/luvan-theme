<header role="banner">
    <div class="container">
        <h1>{{ config.site.title }}</h1>
        <nav role="navigation" aria-label="Menu principal">
            <ul>
                {% for p in pages.children.visible %}
                <li>
                    <a href="{{ p.url }}" {% if p.active %}aria-current="page"{% endif %}>
                        {{ p.menu }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </nav>
        {{ nav_extra }}
    </div>
</header>
